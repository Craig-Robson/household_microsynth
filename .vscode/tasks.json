{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "install",
            "type": "shell",
            "command": "./setup.py install",
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "taskName": "test",
            "type": "shell",
            "command": "./setup.py test",
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "taskName": "run",
            "type": "shell",
            "command": "./scripts/run_microsynth.py",
            "problemMatcher": [
                "$eslint-compact"
            ]
        }
    ]
}